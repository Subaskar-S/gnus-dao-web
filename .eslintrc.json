{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "prefer-const": "warn",
    "no-var": "warn",
    "no-console": "warn",
    "no-unused-vars": "warn",
    "no-undef": "error",
    "no-extra-semi": "warn",
    "no-redeclare": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react/jsx-no-target-blank": "warn",
    "react/no-unescaped-entities": "off"
  },
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "dist/",
    "*.config.js"
  ]
}
