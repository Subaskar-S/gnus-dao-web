# WalletConnect Project ID
# Get your project ID from https://cloud.reown.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Contract Addresses for Different Chains
NEXT_PUBLIC_GNUS_DAO_MAINNET=0x033524b1BA83CEABD8452C08dCAFe71966b9b3F6
NEXT_PUBLIC_GNUS_DAO_BASE=0x...
NEXT_PUBLIC_GNUS_DAO_SKALE=0x...
NEXT_PUBLIC_GNUS_DAO_POLYGON=0x...

# RPC URLs
NEXT_PUBLIC_MAINNET_RPC=https://eth-mainnet.g.alchemy.com/v2/your-api-key
NEXT_PUBLIC_BASE_RPC=https://mainnet.base.org
NEXT_PUBLIC_SKALE_RPC=https://mainnet.skalenodes.com/v1/your-chain-name
NEXT_PUBLIC_POLYGON_RPC=https://polygon-rpc.com

# Optional: Custom RPC endpoints
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key
NEXT_PUBLIC_BSC_RPC=https://bsc-dataseed.binance.org

# API Keys (optional)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here
NEXT_PUBLIC_INFURA_API_KEY=your_infura_api_key_here

# Application Configuration
NEXT_PUBLIC_APP_NAME="GNUS DAO"
NEXT_PUBLIC_APP_DESCRIPTION="Decentralized Autonomous Organization with Quadratic Voting"
NEXT_PUBLIC_APP_URL=https://dao.gnus.ai

# Optional: Analytics and Monitoring
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# IPFS Configuration for Proposal Metadata and File Storage
NEXT_PUBLIC_IPFS_GATEWAY=https://ipfs.io/ipfs/
NEXT_PUBLIC_IPFS_GATEWAY_BACKUP=https://gateway.pinata.cloud/ipfs/
NEXT_PUBLIC_PINATA_API_KEY=your_pinata_api_key
NEXT_PUBLIC_PINATA_SECRET_KEY=your_pinata_secret
NEXT_PUBLIC_PINATA_JWT=your_pinata_jwt_token

# IPFS Node Configuration (optional - for direct IPFS node connection)
NEXT_PUBLIC_IPFS_API_URL=https://ipfs.infura.io:5001
NEXT_PUBLIC_IPFS_API_KEY=your_infura_ipfs_project_id
NEXT_PUBLIC_IPFS_API_SECRET=your_infura_ipfs_project_secret

# IPFS Settings
NEXT_PUBLIC_IPFS_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_IPFS_ALLOWED_TYPES=image/*,application/pdf,text/plain,application/json
NEXT_PUBLIC_IPFS_PIN_TO_CLUSTER=true

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_ENABLE_TESTNETS=true
NEXT_PUBLIC_DEBUG_MODE=true

# Bundle Analysis (set to 'true' to analyze bundle size)
ANALYZE=false

# ===== NOTES =====
# 1. Never commit .env.local to version control
# 2. All NEXT_PUBLIC_ variables are exposed to the browser
# 3. WalletConnect Project ID is required for wallet connections
# 4. RPC URLs are optional - the app will use public endpoints as fallbacks
# 5. For production deployment, set these in your hosting platform's environment variables
# 6. Remove hardcoded API keys from source code and use environment variables instead
